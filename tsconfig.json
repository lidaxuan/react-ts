{
  "compilerOptions": {
    "noImplicitAny": false,
    "declaration": false,
    "target": "es6",
    "preserveConstEnums": true,
    "jsx": "react",
    "incremental": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "module": "esnext",
    "pretty": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src": [
        "./src"
      ],
      "static": [
        "./static"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "strictNullChecks": false,
    "lib": ["dom", "es2015", "es2016", "es2017", "dom.iterable", "scripthost"],
    "typeRoots": ["./node_modules/@types/", "./typings/"]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.js",
    "./typings/images.d.ts"
  ],
  "exclude": [
    "./build",
    "./config",
    "./dist",
    "./node_modules",
    "./tsconfig.json"
  ]
}